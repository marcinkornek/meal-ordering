doctype html
html ng-app="MealOrdering"
  head
    base href="/"
    meta charset="utf-8"

    title Meal Ordering App
    = stylesheet_link_tag 'application', media: 'all'
    = csrf_meta_tags

    javascript:
      window.facebookId = #{ raw ENV['FACEBOOK_KEY'] }

    - if logged_in?
        javascript:
          window.currentUser = #{ raw current_user.extend(HeaderUserRepresenter).to_json}
    - else
      javascript:
        window.currentUser = {}

  body
    = yield

    = javascript_include_tag 'application'
    = js_env
